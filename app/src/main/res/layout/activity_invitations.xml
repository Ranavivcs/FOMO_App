<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFF6FD">

    <!-- Title -->
    <TextView
        android:id="@+id/textViewInvitationsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pending Invitations"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp" />

    <!-- Card container for the list -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#FFFFFF"
        app:cardUseCompatPadding="true"
        app:cardElevation="6dp"
        app:cardCornerRadius="16dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/layoutInvitationsList"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp" />

        </ScrollView>
    </androidx.cardview.widget.CardView>

    <!-- Back button (full-width, centered text) -->
    <Button
        android:id="@+id/buttonBack"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Back"
        android:textStyle="bold"
        android:textColor="#333333"
        android:backgroundTint="#FFD1DC"
        android:layout_marginTop="8dp" />
</LinearLayout>
